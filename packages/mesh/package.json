{
  "name": "@vibecook/truffle-mesh",
  "version": "0.1.0",
  "description": "Main entry point for Truffle mesh networking - device discovery, STAR routing, primary election",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesyong-42/truffle.git",
    "directory": "packages/mesh"
  },
  "homepage": "https://github.com/jamesyong-42/truffle#readme",
  "bugs": {
    "url": "https://github.com/jamesyong-42/truffle/issues"
